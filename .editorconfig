# EditorConfig for ALsimulatorv3
root = true

# Default settings for all files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# WGSL shader files - NO BOM
[*.wgsl]
charset = utf-8-bom = false
end_of_line = lf

# Rust source files
[*.rs]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

# TOML files
[*.toml]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

# JSON files
[*.json]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

# Markdown files
[*.md]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = false
